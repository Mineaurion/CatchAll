<?xml version="1.0" encoding="UTF-8"?>
<project name="module_catchall.catchall-common.main" default="compile.module.catchall.catchall-common.main">
  <dirname property="module.catchall.catchall-common.main.basedir" file="${ant.file.module_catchall.catchall-common.main}"/>
  
  <property name="module.jdk.home.catchall.catchall-common.main" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.catchall.catchall-common.main" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.catchall.catchall-common.main" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.catchall.catchall-common.main" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="catchall.catchall-common.main.output.dir" value="${module.catchall.catchall-common.main.basedir}/../../../catchall-common/build/classes/java/main"/>
  <property name="catchall.catchall-common.main.testoutput.dir" value="${module.catchall.catchall-common.main.basedir}/../../../catchall-common/build/classes/java/main"/>
  
  <path id="catchall.catchall-common.main.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="catchall.catchall-common.main.module.production.classpath">
    <path refid="${module.jdk.classpath.catchall.catchall-common.main}"/>
  </path>
  
  <path id="catchall.catchall-common.main.runtime.production.module.classpath">
    <pathelement location="${catchall.catchall-common.main.output.dir}"/>
  </path>
  
  <path id="catchall.catchall-common.main.module.classpath">
    <path refid="${module.jdk.classpath.catchall.catchall-common.main}"/>
    <pathelement location="${catchall.catchall-common.main.output.dir}"/>
  </path>
  
  <path id="catchall.catchall-common.main.runtime.module.classpath">
    <pathelement location="${catchall.catchall-common.main.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.catchall.catchall-common.main">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.catchall.catchall-common.main">
    <patternset refid="excluded.from.module.catchall.catchall-common.main"/>
  </patternset>
  
  <path id="catchall.catchall-common.main.module.sourcepath">
    <dirset dir="${module.catchall.catchall-common.main.basedir}/../../../catchall-common/src/main">
      <include name="java"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.catchall.catchall-common.main" depends="compile.module.catchall.catchall-common.main.production,compile.module.catchall.catchall-common.main.tests" description="Compile module catchall.catchall-common.main"/>
  
  <target name="compile.module.catchall.catchall-common.main.production" depends="register.custom.compilers" description="Compile module catchall.catchall-common.main; production classes">
    <mkdir dir="${catchall.catchall-common.main.output.dir}"/>
    <javac2 destdir="${catchall.catchall-common.main.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.catchall.catchall-common.main}/javac">
      <compilerarg line="${compiler.args.catchall.catchall-common.main}"/>
      <bootclasspath refid="catchall.catchall-common.main.module.bootclasspath"/>
      <classpath refid="catchall.catchall-common.main.module.production.classpath"/>
      <src refid="catchall.catchall-common.main.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.catchall.catchall-common.main"/>
    </javac2>
    
    <copy todir="${catchall.catchall-common.main.output.dir}">
      <fileset dir="${module.catchall.catchall-common.main.basedir}/../../../catchall-common/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.catchall.catchall-common.main.basedir}/../../../catchall-common/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.catchall.catchall-common.main.tests" depends="register.custom.compilers,compile.module.catchall.catchall-common.main.production" description="compile module catchall.catchall-common.main; test classes" unless="skip.tests"/>
  
  <target name="clean.module.catchall.catchall-common.main" description="cleanup module">
    <delete dir="${catchall.catchall-common.main.output.dir}"/>
    <delete dir="${catchall.catchall-common.main.testoutput.dir}"/>
  </target>
</project>